@model MVC_EF1.Models.Person

@{
    ViewData["Title"] = "Create";
}

<h1>Ajouter un nouvel étudiant</h1>

<h4>Etudiant</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <select asp-for="Sex" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Person.eSex>()">
                    <option selected="selected" value="">...</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ITLevel" class="control-label"></label>
                <select asp-for="ITLevel" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Person.eITLevel>()">
                    <option selected="selected" value="">...</option>
                </select>
                <span asp-validation-for="ITLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Person.eLocation>()">
                    <option selected="selected" value="">...</option>
                </select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGroup" class="control-label"></label>
                <select asp-for="IdGroup" 
                    class="form-control" 
                    asp-items="ViewBag.IdGroup">
                    <option selected="selected" value="">...</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
