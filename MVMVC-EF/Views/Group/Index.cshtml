@model MVMVC_EF.ViewModels.GroupVM

<h1>@Model.PageTitle</h1>

<p>
    <a asp-action="Create">@Model.CreateText</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurrentEntity.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentEntity.Technology)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentEntity.IdProject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entities)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Number)
                         (@Html.DisplayFor(modelItem => item.Name))
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Technology)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="@Model.EditIcon"></i>
                    </a>
                    <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="@Model.DeleteIcon"></i>
                        </a>
                    </td>
            </tr>
        }
    </tbody>
</table>
