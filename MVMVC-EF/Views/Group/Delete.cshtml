@model MVMVC_EF.ViewModels.GroupVM

<h1>@Model.PageTitle</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.CurrentEntity.Number)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CurrentEntity.Number)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.CurrentEntity.Name)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CurrentEntity.Name)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.CurrentEntity.Technology)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CurrentEntity.Technology)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.CurrentEntity.IdProject)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CurrentEntity.Project.Name)
        </dd>
    </dl>

    <h3>@Model.DeleteConfirmText</h3>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CurrentEntity.Id" />
        <input type="submit" value="@Model.DeleteText" class="btn btn-danger" />
    </form>
    <a asp-action="Index">@Model.GoToListText</a>
</div>
