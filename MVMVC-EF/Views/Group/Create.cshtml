@model MVMVC_EF.ViewModels.GroupVM

<h1>@Model.PageTitle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentEntity.Number" class="control-label"></label>
                <input asp-for="CurrentEntity.Number" class="form-control" />
                <span asp-validation-for="CurrentEntity.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentEntity.Name" class="control-label"></label>
                <input asp-for="CurrentEntity.Name" class="form-control" />
                <span asp-validation-for="CurrentEntity.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentEntity.Technology" class="control-label"></label>
                <select 
                    asp-for="CurrentEntity.Technology" 
                    asp-items="@Html.GetEnumSelectList<Group.eTechnology>()" 
                    class="form-control">

                </select>
                <span asp-validation-for="CurrentEntity.Technology" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentEntity.IdProject" class="control-label"></label>
                <select 
                    asp-for="CurrentEntity.IdProject" 
                    asp-items="ViewBag.IdProject"
                    class="form-control">
                </select>
                <span asp-validation-for="CurrentEntity.IdProject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Model.AddText" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Model.GoToListText</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
