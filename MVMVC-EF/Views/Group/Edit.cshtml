@model MVMVC_EF.Models.Group

@{
    ViewData["Title"] = "Edit";
}

<h1>Modification du groupe @Model.Number (@Model.Name)</h1>

<h4>Groupe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Technology" class="control-label"></label>
                <select asp-for="Technology"
                    asp-items="@Html.GetEnumSelectList<Group.eTechnology>()"
                    class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdProject" class="control-label"></label>
                <select asp-for="IdProject"
                    asp-items="ViewBag.IdProject"
                    class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
